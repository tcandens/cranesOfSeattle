.l-map
  position absolute
  flex-direction column
  width 100%
  height 100%
  left 0
  top 0
  overflow hidden
  .c-map
    position relative
    display block
    visibility hidden
    transition height 400ms ease
  &[data-state='isReporting']
    display flex
    flex-direction column
    align-content flex-end
    justify-content space-between
    .l-content
      flex-basis 100px
    .c-map
      display flex
      visibility visible
      flex-basis 100%
