.l-map
  position absolute
  flex-direction column
  width 100%
  height 100%
  left 0
  top 0
  overflow hidden
  .s-map
    position relative
    display none
    transition height 400ms ease
  &--isMapActive
    display flex
    flex-direction column
    align-content flex-end
    justify-content space-between
    .l-content
      flex-basis 100px
      background-color $mint
    .s-map
      display flex
      flex-basis 100%
