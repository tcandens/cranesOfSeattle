.l-map
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  .s-map,
  .l-content
    position absolute
    width 100%
    height 100%
    left 0
    top 0
  .s-map
    z-index 0
  .l-content
    overflow-x hidden
    overflow-y scroll
    background-color white
    z-index 100

.l-map--isMapActive
  .l-content
    max-height 100%
    height auto
    background $dark
    overflow hidden

.l-map--isMapActive.l-map--isReporting
  .l-content
    bottom 0
    top auto
    height auto
