.l-main
  display block
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  .navigation
    position absolute
    bottom 0
    left 0
    width 100%
    height $nav-height
  .c-report, .c-explore, .l-entry
    height 'calc(100% - %s)' % $nav-height

.transition-container
  & > *
    position absolute
    width 100%
  width 100%
  height 100%
.fade-enter
  opacity 0.01
  transition opacity .5s ease-in-out
.fade-enter.fade-enter-active
  opacity 1
.fade-leave
  opacity 1
  transition opacity 300ms ease-in-out
.fade-leave.fade-leave-active
  opacity 0

.layout-enter
  opacity 0.01
  transform translate3d(0, 100px, 0)
  transition opacity 400ms ease, transform 400ms ease
.layout-enter.layout-enter-active
  opacity 1
  transform translate3d(0, 0, 0)
.layout-leave
  opacity 1
  transform translate3d(0, 0, 0)
  transition opacity 400ms ease, transform 400ms ease
.layout-leave.layout-leave-active
  opacity 0
  transform translate3d(0, -100px, 0)
