
.loading-spinner
  position absolute
  width 50px
  height @width
  top "calc(50% - %s)" % (@width / 2)
  left "calc(50% - %s)" % (@width / 2)
  border (@width / 6) alpha($magenta, 20%) solid
  border-top (@width / 6) $magenta solid
  border-radius 50%
  z-index $z-overlay
  transform-origin 50% 50%
  animation spinner 600ms infinite linear

@keyframes spinner
  from
    transform rotate(0deg)
  to
    transform rotate(359deg)

.loading-bar
  $color = alpha($magenta, 0.8)
  $bg = alpha($magenta, 0.5)
  position absolute
  width 60px
  height 18px
  top "calc(50% - %s)" % (@height / 2)
  left "calc(50% - %s)" % (@width / 2)
  border 1px $color solid
  border-radius 5px
  background linear-gradient(-60deg, $bg 0%, $bg 50%, $color 50%, $color 75%, $bg 75%, $bg)
  background-size 20px 30px
  background-position 0px 0px
  z-index $z-overlay
  animation bar 600ms infinite linear

@keyframes bar
  from
    background-position 0px 0px
  to
    background-position -20px 0px
