
.loading-spinner
  position absolute
  width 50px
  height @width
  top "calc(50% - %s)" % (@width / 2)
  left "calc(50% - %s)" % (@width / 2)
  border (@width / 6) alpha($colors-magenta, 20%) solid
  border-top (@width / 6) $colors-magenta solid
  border-radius 50%
  z-index $z-overlay
  transform-origin 50% 50%
  animation spinner 600ms infinite linear

@keyframes spinner
  from
    transform rotate(0deg)
  to
    transform rotate(359deg)

.loading-bar
  $color = alpha($colors-mint, 0.8)
  $bg = alpha(mix($colors-mint, $colors-dark), 1)
  position absolute
  width 100%
  height 18px
  top 0
  left 0
  border-bottom 1px $color solid
  background linear-gradient(-30deg, $bg 0%, $bg 50%, $color 50%, $color 75%, $bg 75%, $bg)
  background-size 300px 150px
  background-position 0px 0px
  z-index $z-overlay
  animation bar 800ms infinite linear

@keyframes bar
  from
    background-position 0px 0px
  to
    background-position 300px 0px
