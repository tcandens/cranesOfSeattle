.c-report-record, .c-crane-record
  width 100%
  padding-left 1em
  border-left-width 1rem
  border-left-style solid
  background linear-gradient(180deg, alpha($colors-dark, 0.09) 20%, transparent)
.c-report-record
  border-left-color $colors-yellow
.c-crane-record
  border-left-color $colors-mint
li:nth-of-type(2n) .c-report-record
  border-left-color darken($colors-yellow, 10)

.avatar
  border-radius 50%
  width 2em
  height 2em
