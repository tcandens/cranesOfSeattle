.modal
  display flex
  position absolute
  flex-direction column
  justify-content center
  align-items stretch
  align-content flex-start
  min-width 250px
  width 80%
  max-width 400px
  min-height 10%
  max-height 80%
  top 20px
  right 40px
  border-radius 0px
  padding 1.2em
  box-shadow 10px 10px 0px alpha($colors-dark, 0.3)
  z-index $z-modal
  &--header
    flex 1 0 auto
    padding 1rem
    width 100%
    color $colors-white
    background-color $colors-dark
  &--body
    flex-basis auto
    width 100%
    overflow-y auto
  &--button
    display flex
    flex-direction column
    flex 1 0 auto
    justify-content flex-end
    align-content stretch
    button
      padding 0.4rem
  &--success
    background linear-gradient(30deg, alpha($colors-mint, 0.99), alpha($colors-yellow, 0.99))
  &--list
    padding 0
    background linear-gradient(30deg, alpha($colors-white, 0.89), tint($colors-dark, 60%))
    ul, ol
      width 100%
      list-style none
