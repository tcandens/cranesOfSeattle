.button
  display block
  margin 1rem
  color $colors-white
  border 3px solid $colors-white
  background-color transparent
  max-width 320px
  text-decoration none
  text-transform uppercase
  cursor pointer
  transition all 500ms ease-in-out
  &:hover
    background-color alpha($colors-dark, 0.8)
    border 3px solid transparent
  a
    color $colors-white
    text-decoration none
  &--lg
    font-size 1.50em
    padding 1rem 1rem
  &--invert
    &:hover
      background-color alpha($colors-mint, 0.5)
