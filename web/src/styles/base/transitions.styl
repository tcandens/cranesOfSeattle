.transition-container
  & > *
    position absolute
    width 100%
  width 100%
  height 100%

.fade-enter
  opacity 0.01
  transition opacity 400ms ease-in-out
.fade-enter.fade-enter-active
  opacity 1
.fade-leave
  opacity 1
  transition opacity 400ms ease-in-out
.fade-leave.fade-leave-active
  opacity 0

.fly-up-enter
  opacity 0.01
  transform translate3d(0, 20px, 0)
  transition opacity 200ms ease, transform 400ms ease-in-out
.fly-up-enter.fly-up-enter-active
  opacity 1
  transform translate3d(0, 0, 0)
.fly-up-leave
  opacity 1
  transform translate3d(0, 0, 0)
  transition opacity 200ms ease, transform 400ms ease-in-out
.fly-up-leave.fly-up-leave-active
  opacity 0
  transform translate3d(0, -20px, 0);

.layout-appear
  opacity 0
  transition opacity 400ms ease-out, transform 400ms ease-out
.layout-appear.layout-appear-active
  opacity 1
.layout-enter
  opacity 0
  transform translate3d(0, -100px, 0)
  transition opacity 400ms ease-in, transform 400ms ease-in
.layout-enter.layout-enter-active
  opacity 1
  transform translate3d(0, 0, 0)
.layout-leave
  opacity 1
  transform translate3d(0, 0, 0)
  transition opacity 400ms ease-out, transform 400ms ease-out
.layout-leave.layout-leave-active
  opacity 0
  transform translate3d(0, -100px, 0)
