table
  border-collapse collapse
  border-spacing 0
  width 100%
  max-width 100%

thead th:nth-of-type(1), tbody tr td:nth-of-type(1)
  padding-left 1em

tbody tr td:last-of-type
  padding-right 1em
  text-align right

thead th
  padding 1em 0
  text-align left
  font-family $display-font
  color alpha($colors-dark, 0.5)
  font-style italic

tbody tr td
  padding 0.6em 0 0.4em 0
tbody tr:nth-of-type(2n + 1)
  background-color alpha($colors-mint, 0.2)
