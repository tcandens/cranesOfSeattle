FROM node:5.3

WORKDIR /usr/src/
COPY ./package.json package.json
COPY ./src src/
COPY ./templates templates/
COPY ./test test/
COPY ./webpack webpack/
COPY ./.babelrc .babelrc
COPY ./karma.config.js karma.config.js
COPY ./test.context.js test.context.js
COPY ./server.js server.js
RUN npm install

EXPOSE 9000

CMD ["npm", "test"]
